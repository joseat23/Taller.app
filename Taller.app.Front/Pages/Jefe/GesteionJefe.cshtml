@page
@model Taller.app.Front.Pages.GesteionJefeModel
@{
}
<h1>
    Datos del vehiculo
</h1>
<div class="container" style="margin-top: 40px">
    <div class="row g-3">
        <div class="col-md-4 ">

            <select class="form-select" aria-label="Default select example">
                <option selected>Marca Del vehiculo</option>
                <option value="1">Mazda</option>
                <option value="2">Renault</option>
                <option value="3">Chevrolet</option>
                <option value="4">Kia</option>
                <option value="5">Toyota</option>
                <option value="6">Ford</option>
            </select>

        </div>
        <div class="col-md-4">

            <select class="form-select" aria-label="Default select example">
                <option selected>Modelo</option>
                <option value="1">2019</option>
                <option value="2">2020</option>
                <option value="3">2021</option>
                <option value="4">1</option>
            </select>

        </div>
        <div class="col-md-4">

            <select class="form-select" aria-label="Default select example">
                <option selected>Version</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>

        </div>

    </div>
    <div class="row g-3 ">
        <div class="col-md-4" style="margin-top: 55px">

            <select class="form-select" aria-label="Default select example">
                <option selected>Combustible</option>
                <option value="1">Gasolina</option>
                <option value="2">Diesel-ACPM</option>
                <option value="3">Gas</option>
            </select>

        </div>
        <div class="col-md-4">
            <div style="margin-top: 39px">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Clase de vehiculo</option>
                    <option value="1">Automovil</option>
                    <option value="2">Camioneta</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div style="margin-top: 40px">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Cilindraje</option>
                    <option value="1">1.0</option>
                    <option value="2">1.2</option>
                    <option value="3">1.4</option>
                    <option value="4">1.6</option>
                    <option value="5">2.0</option>
                    <option value="6">2.4</option>
                </select>
            </div>
        </div>

    </div>
    <div class="row g-3">
        <div class="col-md-4" style="margin-top: 50px">

            <select class="form-select" aria-label="Default select example">
                <option selected>Pasajeros</option>
                <option value="1">2</option>
                <option value="2">5</option>
                <option value="3">7</option>
            </select>

        </div>
        <div class="col-md-4" style="margin-top: 50px">
            <div class="col">
                <input type="text" class="form-control" placeholder="Placa" aria-label="Placa">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating" style="margin-top: 40px">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Comentarios</label>
            </div>

        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 20px">Registrar</button>
</div>
